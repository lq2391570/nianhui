/* pages/aEndSignPage/aEndSignPage.wxss */
@keyframes scaleDraw {
  0%{
      transform: scale(1);
  }
  25%{
      transform: scale(1.1);
  }
  50%{
      transform: scale(1);
  }
  75%{
      transform: scale(1.1);
  }
}
page{
  height: 100%;
}
.bgView{
  position: fixed;
  width: 100%;
  display: flex;
  flex-direction: column;
  background: white;
  height: 100%;
  justify-content: space-between;
  align-items: center;
  background-size: 100% 100%;
}
.contentView{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 90%;
  width: 100%;
}
.contentView-top{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 90%;
  width: 100%;
  align-items: center;
}
.bottomContentView{
  width: 100%;
  font-size: 25rpx;
  color: white;
  text-align: center;
  padding-bottom: 50rpx;
}
.pool{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 72%;
  height: 84rpx;
  background-color: #ea6545;
  border-radius: 42rpx;
  margin-bottom: 55rpx;

}
.pool-num{
  font-size: 36rpx;
  color: white;
  margin-left: 40rpx;
}
.inject{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 120rpx;
  height: 60rpx;
  border: 2rpx white solid;
  border-radius: 30rpx;
  color: white;
  margin-right: 25rpx;
}
.topTitleView{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 150rpx;
  /* background: cornflowerblue; */
  align-items: center;
  margin-top: 100rpx;
}
.topTitleView text:nth-child(1){
  font-size: 55rpx;
  color: rgb(225, 78, 65);
  font-weight: bold;
}
.topTitleView text:nth-child(2){
  font-size: 45rpx;
  color: rgb(225, 78, 65);
  font-weight: bold;
}
.centerBtnView{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 340rpx;
  width: 340rpx;
  animation: scaleDraw 8s ease-in-out infinite;
  line-height: 280rpx;
  color: white;
  font-size: 45rpx;
}
.centerBtnView text{
  margin-bottom: 20rpx;
}